<%= simple_form_for([current_user, Reminder.new], multipart: true) do |f| %>
  <%= f.error_notification %>

<div class="container">
    <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <div class="well well-lg">
      <h2 style="text-align: center">What can we help you remember?</h2>
    </div>
    </div>
    <div class="col-md-3"></div>
    </div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
      <div class="form-inputs">
    <%= f.input :title, required: true %>
    <%= f.input :description, required: true %>
    <%= f.select :priority, options_for_select([['urgent'],['high'],['normal'],['low']])%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

